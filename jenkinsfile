pipeline {
    agent any

    stages {
        stage('build') {
            steps {
                echo 'Hello build'
            }
        }
        stage('test') {
            steps {
                echo 'Hello test'
            }
        }
         stage('approval') {
            steps {
                input("Deploy to production?")
                    {

                 message "do you want to deploy to production?"
                 submitterParameter 'Approver'


                       }
            }
        }
        stage('deploy') {
            steps {
                echo 'Hello deploy'
            }
        }
    }
}
